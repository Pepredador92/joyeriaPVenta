{
  "name": "joyeria-pventa",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Sistema de punto de venta cross-platform para joyerÃ­as",
  "author": "Tu Nombre",
  "license": "MIT",
  "main": "dist/main/main.cjs",
  "homepage": "./",
  "scripts": {
  "dev": "npm run predev:kill-port && npm run dev:renderer & sleep 3 && npm run dev:main",
  "predev:kill-port": "node -e \"require('node:child_process').exec('lsof -ti :5173 | xargs kill -9', ()=>process.exit(0))\"",
  "dev:renderer": "vite --port 5173 --strictPort",
    "dev:main": "npm run build:main && NODE_ENV=development npx electron dist/main/main.cjs",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "npx esbuild src/main/main.ts src/main/preload.ts --bundle --platform=node --target=node18 --format=cjs --external:electron --external:better-sqlite3 --external:sharp --external:electron-log --outdir=dist/main --sourcemap --out-extension:.js=.cjs",
  "test:ventas": "tsx scripts/test-ventas.ts",
    "build:mac": "npm run build && npx electron-builder --mac",
    "build:win": "npm run build && npx electron-builder --win",
    "build:all": "npm run build && npx electron-builder --mac --win",
    "preview": "vite preview"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "electron": "^33.2.1",
    "electron-log": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
  "@types/react": "^18.3.3",
  "@types/react-dom": "^18.3.0",
  "@typescript-eslint/eslint-plugin": "^8.39.0",
  "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.0",
  "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "tsx": "^4.19.2",
  "typescript": "^5.6.3",
    "vite": "^5.3.4"
  },
  "build": {
    "appId": "com.vangelico.pos",
    "productName": "Vangelico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
